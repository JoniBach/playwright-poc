{
  "name": "playwright-poc",
  "version": "1.0.0",
  "description": "Playwright POC with UI and Journey Generator",
  "private": true,
  "workspaces": [
    "playwright-poc-ui",
    "playwright-poc-gen-ui",
    "playwright-poc-qa"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=playwright-poc-ui",
    "ui": "npm run dev --workspace=playwright-poc-ui",
    "build": "npm run build --workspace=playwright-poc-ui",
    "preview": "npm run preview --workspace=playwright-poc-ui",
    "test": "npm run test --workspace=playwright-poc-qa",
    "test:ui": "npm run test:ui --workspace=playwright-poc-qa",
    "test:all": "npm run test:all --workspace=playwright-poc-qa",
    "test:components": "npm run test:components --workspace=playwright-poc-qa",

    "ai:index": "cd playwright-poc-gen-ui && tsx src/v2/gen-index.ts",
    "ai:journeys": "cd playwright-poc-gen-ui && tsx src/v2/gen-journeys.ts",
    "ai:stories": "cd playwright-poc-gen-ui && tsx src/v2/gen-stories.ts",
    "ai:tests": "cd playwright-poc-gen-ui && tsx src/v2/gen-tests.ts",

    "gen:journeys": "cd playwright-poc-gen-ui && npm run generate:index",
    "gen:stories": "cd playwright-poc-gen-ui && npm run generate:stories:interactive",
    "gen:tests": "cd playwright-poc-gen-ui && npm run generate:tests -- \"$@\" --skip-stories --output=../playwright-poc-qa/tests/generated/",
    "gen:v2": "cd playwright-poc-gen-ui && npm run gen:v2",
    "gen:validate": "cd playwright-poc-qa && npm run test:journeys && npm run test -- tests/generated/",
    "validate": "npm run validate --workspace=playwright-poc-gen-ui",
    "install:all": "npm install && npm install --workspace=playwright-poc-ui && npm install --workspace=playwright-poc-gen-ui"
  },
  "keywords": [
    "playwright",
    "svelte",
    "govuk",
    "journey",
    "generator"
  ],
  "author": "",
  "license": "ISC"
}
